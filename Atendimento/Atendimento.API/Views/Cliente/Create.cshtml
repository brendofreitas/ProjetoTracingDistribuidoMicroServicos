@model Atendimento.Domain.Entities.Cliente

@{
    ViewData["Title"] = "Novo Cliente";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Cliente" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="/Cliente" class="btn btn-secondary">Voltar</a>
</form>
